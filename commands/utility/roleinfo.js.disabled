      logger.info(`Roleinfo-Befehl fÃ¼r ${role.name} ausgefÃ¼hrt von ${interaction.user.tag}`);
    } catch (error) {
      logger.error(`Fehler beim AusfÃ¼hren des Roleinfo-Befehls: ${error}`);
      
      return interaction.reply({ 
        embeds: [createEmbed(
          '> Fehler', 
          'Beim AusfÃ¼hren des Befehls ist ein Fehler aufgetreten. Bitte versuche es spÃ¤ter erneut.',
          config.colors.error
        )],
        ephemeral: true 
      });
    }
  },
};

// Funktion zur Berechnung der Zeitdauer
function calculateDuration(timestamp) {
  const now = Date.now();
  const diff = now - timestamp;
  
  const seconds = Math.floor(diff / 1000);
  const minutes = Math.floor(seconds / 60);
  const hours = Math.floor(minutes / 60);
  const days = Math.floor(hours / 24);
  const months = Math.floor(days / 30);
  const years = Math.floor(days / 365);
  
  if (years > 0) {
    return `vor ${years} Jahr${years !== 1 ? 'en' : ''}`;
  } else if (months > 0) {
    return `vor ${months} Monat${months !== 1 ? 'en' : ''}`;
  } else if (days > 0) {
    return `vor ${days} Tag${days !== 1 ? 'en' : ''}`;
  } else if (hours > 0) {
    return `vor ${hours} Stunde${hours !== 1 ? 'n' : ''}`;
  } else if (minutes > 0) {
    return `vor ${minutes} Minute${minutes !== 1 ? 'n' : ''}`;
  } else {
    return `vor ${seconds} Sekunde${seconds !== 1 ? 'n' : ''}`;
  }
}

